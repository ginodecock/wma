<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
		<h1>Watermeter dashboard</h1>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
						<a href="/logout" class="btn btn-default btn-sm">Logout</a><br>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>
                    
                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
            <div class="well">
                <div class="row">
                    <div class="col-sm-6">
                        <a href="/getwma" class="btn btn-default">Sensor logs</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <a href="/getmysensors" class="btn btn-default">List my sensors</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="col-sm-6">
            <div class="well">
                <div class="row">
                    <div class="col-sm-6">
                        <form action="/addsensor" method="post">
                        <div class="form-group">
                            <label>sensorid</label>
                            <input type="text" class="form-control" name="sensorId">
                        </div>
                        <div class="form-group">
                            <label>name</label>
                            <input type="text" class="form-control" name="name">
                        </div>
                        <div class="form-group">
                            <label>type</label>
                            <input type="text" class="form-control" name="type">
                        </div>
                            <button type="submit" class="btn btn-default">Link sensor</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="well">
                <div class="row">
                    <div class="col-sm-6">
                        <% sensors.forEach(function(sensor){ %>
                        <%= sensor.name %>
                        <%= sensor.type %>
                        <form action="/logmysensor" method="post">
                        <div class="form-group">
                            <input type="hidden" class="form-control" value = <%= sensor.sensorId %> name="sensorId">
                        </div>
                            <button type="submit" class="btn btn-default"><%= sensor.sensorId %></button>
                        </form>
                        
                        <%  }) %>
                    </div>
                </div>
            </div>
        </div>                    
    </div>
</div>
</body>
</html>
